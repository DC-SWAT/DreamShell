# ============================================================================
# Linker
# ============================================================================

SPECIFIC_LDFLAGS= 
API_MAJOR=4
API_MINOR=3
RANLIB=sh-elf-ranlib
AR=sh-elf-ar

# ============================================================================
# Installation
# ============================================================================

INSTALL=/usr/bin/install -c
DESTDIR=
prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

